#!/usr/bin/bash
waydroid show-full-ui &

sleep 5

waydroid prop set persist.waydroid.uevent false
waydroid prop set persist.waydroid.multi_windows false

for _file in "${HOME}/.local/share/applications"/waydroid.*.desktop; do
    grep "NoDisplay=true" "${_file}" ||
        sed -i "/NoDisplay/d;/\[Desktop Entry\]/a NoDisplay=true" "${_file}"
done
