{
    "title": "Menu",
    "icon": "~/.local/share/gnome-shell/extensions/command-menu2@goldentree1.github.com/icons/penguin.svg",
    "position": "center",
    "index": "auto",
    "menu": [
        {
            "type": "label",
            "title": "Applications"
        },
        {
            "title": "Terminal",
            "command": "gnome-terminal",
            "icon": "utilities-terminal-symbolic"
        },
        {
            "title": "Files",
            "command": "nautilus",
            "icon": "folder-symbolic"
        },
        {
            "title": "Web Browser",
            "command": "firefox",
            "icon": "web-browser-symbolic"
        },
        {
            "title": "Settings",
            "command": "gnome-control-center",
            "icon": "preferences-system-symbolic"
        },
        {
            "type": "separator"
        },
        {
            "type": "label",
            "title": "Networking"
        },
        {
            "title": "SSH",
            "icon": "network-workgroup",
            "type": "submenu",
            "submenu": [
                {
                    "title": "Connect to Server #1",
                    "command": "gnome-terminal -- bash -c 'ssh user@server1'"
                },
                {
                    "title": "Connect to Server #2",
                    "command": "gnome-terminal -- bash -c 'ssh user@server2'"
                }
            ]
        },
        {
            "title": "VPN",
            "icon": "network-server",
            "type": "submenu",
            "submenu": [
                {
                    "title": "Connect to NordVPN",
                    "icon": "nordvpn-symbolic",
                    "command": "nordvpn connect"
                },
                {
                    "title": "Disconnect NordVPN",
                    "icon": "nordvpn-symbolic",
                    "command": "nordvpn disconnect"
                }
            ]
        },
        {
            "type": "separator"
        },
        {
            "title": "Logout",
            "icon": "system-log-out-symbolic",
            "command": "gnome-session-quit --logout"
        },
        {
            "title": "Reboot",
            "icon": "system-reboot-symbolic",
            "command": "gnome-session-quit --reboot"
        },
        {
            "title": "Power Off",
            "icon": "system-shutdown-symbolic",
            "command": "gnome-session-quit --power-off"
        }
    ]
}