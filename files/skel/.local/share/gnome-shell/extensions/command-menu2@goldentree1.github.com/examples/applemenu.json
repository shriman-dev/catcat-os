{
    "icon": "~/.local/share/gnome-shell/extensions/command-menu2@goldentree1.github.com/icons/apple.svg",
    "position": "left",
    "index": 0,
    "menu": [
        {
            "title": "About This Linux",
            "command": "bash -c 'notify-send \"System Info\" \"$(uname -s) $(lsb_release -d | cut -d: -f2 | xargs) $(uname -r)\"'"
        },
        {
            "type": "separator"
        },
        {
            "title": "System Settings...",
            "command": "gnome-control-center"
        },
        {
            "title": "App Store...",
            "command": "bash -c 'if [ -z \"$(which gnome-software)\" ]; then snap-store; else gnome-software; fi'"
        },
        {
            "type": "separator"
        },
        {
            "title": "Force Quit...",
            "command": "gnome-system-monitor"
        },
        {
            "type": "separator"
        },
        {
            "title": "Sleep",
            "command": "systemctl suspend"
        },
        {
            "title": "Restart...",
            "command": "gnome-session-quit --reboot"
        },
        {
            "title": "Shut Down...",
            "command": "gnome-session-quit --power-off"
        },
        {
            "type": "separator"
        },
        {
            "title": "Lock Screen",
            "command": "xdg-screensaver lock"
        },
        {
            "title": "Log Out...",
            "command": "gnome-session-quit --logout"
        }
    ]
}